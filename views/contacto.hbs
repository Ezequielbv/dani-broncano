<h1 hidden>Contacto</h1>
<h2>Hola!</h2>

<div class="col-md-10 mx-auto">
    <form class="row">
        <div class="col-md-4">
            <label for="form-nombre">Nombre</label>
            <input id="form-nombre" type="text" placeholder="Nombre" name="nombre" />
        </div>
        <div class="col-md-4">
            <label for="form-email">Correo Electrónico</label>
            <input id="form-email" type="email" placeholder="E-Mail" name="email" />
        </div>
        <div class="col-md-4">
            <label for="form-telefono">Teléfono</label>
            <input id="form-telefono" type="tel" placeholder="telefono" name="telefono" />
        </div>

        <div class="col-md-12 mx-auto">
            <label for="form-mensaje" class="col">Mensaje</label>
            <textarea id="form-mensaje" name="mensaje" rows="5" cols="33" class="w-100"></textarea>
        </div>

        <button class="btn btn-dark ml-auto" type="submit">Submit</button>
    </form>
</div>
